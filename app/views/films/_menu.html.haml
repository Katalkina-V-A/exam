-if Film.edit_by?(@current_user)
  .btn-toolbar
    =link_to edit_film_path(@film), class: 'btn btn-primary' do
      =fa_icon 'edit'
      Редактировать
    =link_to @film, data: {method: :delete, confirm: t('helpers.sure')}, class: 'btn btn-danger' do
      =fa_icon 'trash'
      Удалить
-elsif @current_user!=0
  .btn-toolbar
    -if @current_user.films.exists?(@film)
      =link_to 'Из избранного', add_film_path(id: @film, type: "unfavorite"), method: :put, class: 'btn btn-primary'
    -else
      =link_to 'В избранное', add_film_path(id: @film, type: "favorite"), method: :put, class: 'btn btn-primary'
