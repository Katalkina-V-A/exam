.page-header
  %h1 Фильмы
-if Film.edit_by?(@current_user)
  .btn-toolbar
    =link_to new_film_path, class: 'btn btn-primary' do
      =fa_icon 'plus'
      Новый фильм
-if @films.blank?
  .alert.alert-info Фильмов не найдено
-else

  = form_tag(search_index_path, :method => "get", id: "search-form") do
    .form-group
      .input-group
        = text_field_tag :search, params[:search], placeholder: "Поиск", class: 'form-control'
        .input-group-btn
          = submit_tag 'Поиск', class: 'btn btn-primary'
  .list-group
    =render @films
  =paginate @films
